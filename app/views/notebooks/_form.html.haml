= form_for @notebook do |f|
  - if @notebook.errors.any?
    #error_explanation
      %h2= "#{pluralize(@notebook.errors.count, "error")} prohibited this notebook from being saved:"
      %ul
        - @notebook.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :notes_count
    = f.number_field :notes_count
  .field
    = f.label :published_at
    = f.datetime_select :published_at
  .actions
    = f.submit 'Save'
