= form_for @note do |f|
  - if @note.errors.any?
    #error_explanation
      %h2= "#{pluralize(@note.errors.count, "error")} prohibited this note from being saved:"
      %ul
        - @note.errors.full_messages.each do |msg|
          %li= msg

  .field
    タイトル
    = f.text_field :title
  .field
    本文
    = f.text_area :body
  .actions
    = f.submit '保存'
