%h1 Listing notes

%table
  %tr
    %th Title
    %th Body
    %th User
    %th Published at
    %th
    %th
    %th

  - @notes.each do |note|
    %tr
      %td= note.title
      %td= strip_tags(note.body)
      %td= note.user_id
      %td= note.published_at
      %td= link_to 'Show', note
      %td= link_to 'Edit', edit_note_path(note)
      %td= link_to 'Destroy', note, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Note', new_note_path
